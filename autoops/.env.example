# AutoOps Environment Variables Configuration
# Copy this file to .env and update with your values

# Model Configuration
MODEL_PATH=/app/models/model.pkl
MODEL_TYPE=auto

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
# Get your Gemini API key from: https://makersuite.google.com/app/apikey

# Optional: OpenAI API (if you want to use GPT models)
# OPENAI_API_KEY=your_openai_api_key_here

# Cloud Storage (if using)
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
S3_BUCKET=autoops-models

# Hugging Face (optional, for private models)
# HF_TOKEN=your_huggingface_token

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false

# Deployment Configuration
ENVIRONMENT=development
DEBUG=false

# Database (if needed for future features)
# DATABASE_URL=postgresql://user:password@localhost/autoops